{
    "name": "simnang/loanpro-sdk",
    "description": "LoanPro SDK for PHP",
    "license": "MIT",
    "keywords": ["loanpro","sdk","simnang","php"],
    "authors": [
        {
            "name": "Matthew Tolman"
        }
    ],
    "require": {
        "php": ">=5.6.2",
        "monolog/monolog": "^1.13",
        "athari/yalinqo": "~2.0",
        "php-http/socket-client": "^1.2",
        "guzzlehttp/psr7": "^1.4",
        "php-http/message": "^1.5",
        "php-http/discovery": "^1.2",
        "php-http/curl-client": "^1.7",
        "php-http/promise": "^1.0",
        "violet/streaming-json-encoder": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit":"^5.7.19"
    },
    "autoload": {
        "psr-4": {
            "Simnang\\LoanPro\\": "src"
        }
    },
    "files":["src/Constants/Constants.php"],
    "scripts": {
        "test": "phpunit unit_tests/",
	    "coverage": "phpunit --configuration phpunit.xml --coverage-html cov_html/ --coverage-clover cov_xml/clover.xml  unit_tests",
        "connection": "phpunit unit_tests/ApiClientTest.php"
    }
}
