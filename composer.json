{
    "name": "simnang/loanpro-sdk",
    "description": "LoanPro SDK for PHP",
    "license": "MIT",
    "keywords": ["loanpro","sdk","simnang","php"],
    "authors": [
        {
            "name": "Matthew Tolman"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "monolog/monolog": "^1.13",
        "athari/yalinqo": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit":"^5.7.19"
    },
    "autoload": {
        "psr-4": {
            "Simnang\\LoanPro\\": "src"
        }
    },
    "files":["src/Constants/Constants.php"],
    "scripts": {
        "test": "phpunit unit_tests/",
	"coverage": "phpunit --configuration phpunit.xml --coverage-html cov_html/ --coverage-clover cov_xml/clover.xml  unit_tests"
    }
}
